@model TrackingPackages.ViewModels.Packages.PackagesCreateViewModel
@{
    ViewBag.Title = "Create Package";
    ViewBag.PackagesActive = "active";

}
<h2>Create Package</h2>

@using (Html.BeginForm("Create", "Packages", FormMethod.Post))
{
    <div class="row mt-2">
        <div class="col-3">
            @* Received Date *@
            @Html.LabelFor(m => m.ReceiveDate)
            @Html.TextBoxFor(m => m.ReceiveDate, htmlAttributes: new { @class = "form-control", type = "date" })
        </div>
        <div class="col-3">
            @* Packet Size *@
            @Html.LabelFor(m => m.PacketSize)
            @Html.DropDownListFor(m => m.PacketSize, new SelectList(Model.PacketSizes, "Key", "Value"), htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-3 ">
            <label>Extra Information</label>
            <div class="d-flex align-items-end">
                <div>
                    @* Has Value to pay *@
                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.HasValueToPay, htmlAttributes: new { @class = "form-check-input" })
                        @Html.LabelFor(m => m.HasValueToPay, "Has value to pay?", htmlAttributes: new { @class = "form-check-label" })
                    </div>
                    @* Is Fragile *@
                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.IsFragile, htmlAttributes: new { @class = "form-check-input" })
                        @Html.LabelFor(m => m.IsFragile, "Is fragile?", htmlAttributes: new { @class = "form-check-label" })
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="row mt-2">
        <div class="col-2">
            @* Weight *@
            @Html.LabelFor(m => m.Weight)
            @Html.TextBoxFor(m => m.Weight, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-4">
            @* Address *@
            @Html.LabelFor(m => m.Address)
            @Html.TextBoxFor(m => m.Address, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-2">
            @*ZipCode*@

            @Html.LabelFor(m => m.ZipCode)
            @Html.TextBoxFor(m => m.ZipCode, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-4">
            @* Location *@
            @Html.LabelFor(m => m.Location,"Country")
            @Html.TextBoxFor(m => m.Location, htmlAttributes: new { @class = "form-control" })
        </div>

    </div>
    <div class="row mt-3">
        <div class="col-12 d-flex justify-content-start">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
}


